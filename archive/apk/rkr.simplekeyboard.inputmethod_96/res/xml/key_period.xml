<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSet="dvorak">
            <Key latin:keyLabelFlags="hasPopupHint" latin:keySpec="z" latin:moreKeys="!text/morekeys_punctuation,!text/morekeys_z" />
        </case>
        <case latin:keyboardLayoutSet="bengali_bijoy">
            <Key latin:backgroundType="functional" latin:keyHintLabel="!text/keyhintlabel_period" latin:keyLabelFlags="hasPopupHint|hasShiftedLetterHint" latin:keySpec="ред" latin:moreKeys="!text/morekeys_period" />
        </case>
        <default>
            <Key latin:backgroundType="functional" latin:keyHintLabel="!text/keyhintlabel_period" latin:keyLabelFlags="hasPopupHint|hasShiftedLetterHint" latin:keySpec="!text/keyspec_period" latin:moreKeys="!text/morekeys_period" />
        </default>
    </switch>
</merge>